<package>
  <name>cpmd</name>
  <executable>mpirun -np 8 cpmd_mpi.x</executable>
  <charge>0</charge>
  <spin>0</spin>
  <options>none</options>
  <threads help="ignored">1</threads>
  <scratch></scratch>
  <memory help="ignored">1Gb</memory>
  <cleanup></cleanup>
  
  <optimizewf>1.0e-7</optimizewf>
  <pwcutoff>90.0</pwcutoff>
  <elpot>1</elpot>
  <projectwf>1</projectwf>
  <basisset>ubecppol</basisset>
  <popanalysis>1</popanalysis>
  <getmatrices>1</getmatrices>
  <symmetry>0</symmetry>
  <cell>22.167   1.0   1.0  0.0  0.0  0.0</cell>
  
  <useGrimmeVDW>1</useGrimmeVDW>
  <customCPMDcontrolls>
  LSD
  STORE WAVEFUNCTIONS
    10 SC=10
  </customCPMDcontrolls>
  
  <functional>
    <name>BLYP</name>
    <pseudopotentials help="Pseudopotential file names for each atom and their read options. These need to be placed into the working directory manually.">
      <O>O_MT_BLYP RAGGIO=1.0</O>
      <H>H_GIA_BLYP RAGGIO=1.0</H>
    </pseudopotentials>
    <l help="Data about angular momentum of orbitals in each pseudopotential file.">
      <O>LMAX=P LOC=P</O>
      <H>LMAX=S LOC=S</H>
    </l>
    
  </functional>
  
</package>
