<options>

<exciton>

        <dftpackage>gaussian_egwbse_molecule.xml</dftpackage>

        <tasks>input,dft,parse,gwbse,optimize</tasks>
        <reporting>noisy</reporting>
        <output>exciton.out.xml</output>

        <molecule help="">
                <log>system.log</log>
                <orbitals>fort.7</orbitals>
                <xyz>system.xyz</xyz>
                <levels>3</levels>
        </molecule>

        <gwbse_options>mbgft.xml</gwbse_options>

        <optimize>
            <state>1</state>
            <spintype>singlet</spintype>
            <displacement>0.001</displacement>
            <convergence>0.001</convergence>
        </optimize> 
        <archive>system.orb</archive>

</exciton>

</options>


